@using SimpleStoreWeb.Data.Enums
<!DOCTYPE html>
<html>
<head>
    <title>Simple Store Application: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <header class="container-fluid">
            <nav class="navbar navbar-dark bg-dark navbar-expand-md">
                <h1 class="navbar-brand">Simple Store Application</h1>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="menu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="app" asp-action="index">Начало</a></li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole(ApplicationRoles.Administrator.ToString()))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="admin" asp-action="index">Категории</a></li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole(ApplicationRoles.User.ToString()))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="products" asp-action="index">Моите продукти</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="orders" asp-action="index">Списък поръчки</a></li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="account" asp-action="logout">Изход</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="account" asp-action="login">Вход</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="account" asp-action="register">Регистрация</a></li>
                        }
                    </ul>
                </div>
            </nav>
        </header>
        <section class="container">
            <div class="row">
                <div class="col-11">
                    <div class="container">
                        <h2 class="text-center">@ViewBag.Title</h2>
                        @RenderBody()
                    </div>
                    
                </div>
            </div>
            
        </section>
        <footer class="container">
            <div class="text-center">Copyright 2022</div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fortawesome/fontawesome-free/js/fontawesome.js"></script>
    <script src="~/lib/fortawesome/fontawesome-free/js/solid.js"></script>
    @RenderSection("scripts", false)
</body>
</html> 